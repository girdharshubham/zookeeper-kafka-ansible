[Unit]
Description=Zookeeper Service

[Service]
Type=forking
User={{ user }}
Group={{ group }}
ExecStart= /home/{{ user }}/{{ zookeeper_version }}-bin/bin/zkServer.sh start /home/{{ user }}/{{ zookeeper_version }}-bin/conf/zookeeper.cfg
Restart=always
RestartSec=60
TimeoutStopSec=60
TimeoutStartSec=60
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
